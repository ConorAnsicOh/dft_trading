<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dft.trading.account.dao.sql.SgnSingSQL">

    <resultMap id="sgnSingResultMap" type="com.dft.trading.account.io.SgnSingIO">
        <id property="userId" column="USER_ID"/>
        <result property="userPw" column="USER_PWD"/>
        <result property="userEmail" column="USER_EMAIL"/>
        <result property="userNm" column="USER_NM"/>
        <result property="userNnm" column="USER_NNM"/>
        <result property="userState" column="USER_STATE"/>
        <result property="userDv" column="USER_DV"/>
        <result property="salt" column="salt"/>
        <result property="lstUdtDt" column="LST_UDT_DT"/>
    </resultMap>

	<!-- user 등록 쿼리-->
    <insert id="createUser" parameterType="map">
    	INSERT INTO DFT_USER_INFO (USER_ID, USER_PWD, USER_EMAIL, USER_NM, USER_NNM, USER_DV, USER_STATE,salt)
          VALUES(#{userId}, #{userPw}, #{userEmail}, #{userNm}, #{userNnm}, 'N', '01',#{salt})     
    </insert>
    
    <!-- id 중복체크 -->
    <select id="findByUserId" resultType="String">
        SELECT * FROM DFT_USER_INFO WHERE USER_ID = #{userId} 
    </select>
    
    <!-- email 중복체크 -->
    <select id="findByEmail" resultType="String">
        SELECT USER_EMAIL FROM DFT_USER_INFO WHERE USER_EMAIL = #{userEmail} 
    </select>
    
    <!-- salt 조회 -->
      <select id="readSalt" resultType="String">
        SELECT USER_PWD FROM DFT_USER_INFO WHERE USER_ID = #{userId} 
    </select>
    <!-- 비밀번호 변경 -->
    <update id="udatePassword">
    	UPDATE DFT_USER_INFO
    	SET USER_PWD = #{userPw}
    	WHERE USER_EMAIL = #{userEmail}
    </update>
</mapper>